---
import type { i18nTranslations, ProjectKey } from "@/../types/types";
const data: i18nTranslations = Astro.props.data;
---

<div class="relative flex h-auto w-full flex-col items-center justify-between pt-5 px-4 mb-40 max-w-7xl mx-auto">
  <h1 class="pt-12 pb-8 text-3xl font-bold text-blackPal dark:text-whitePal" id="projects">
    {data.projects.title}
  </h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 w-full">
    {
      Object.keys(data.projects).map((key, index) => {
        const projectKey = key as ProjectKey;
        if (key === "title") return;

        const { name, description } = data.projects[projectKey];

        // Diferentes tamaños para crear un diseño tipo bento box
        const sizeClasses = [
          "md:col-span-2 lg:col-span-2 md:row-span-2",
          "md:col-span-1 lg:col-span-1",
          "md:col-span-1 lg:col-span-1",
          "md:col-span-2 lg:col-span-1",
          "md:col-span-1 lg:col-span-2",
          "md:col-span-1 lg:col-span-1",
        ];

        return (
          <div
            class={`project-card group relative overflow-hidden rounded-2xl ${sizeClasses[index % sizeClasses.length]} min-h-[300px]`}
          >
            {/* Imagen de fondo */}
            <div
              style={`background-image: url(/img/${key}.webp)`}
              class="absolute inset-0 bg-cover bg-center project-bg"
            />

            {/* Overlay con gradiente */}
            <div class="absolute inset-0 bg-gradient-to-br from-black/40 via-black/60 to-black/90 project-overlay" />

            {/* Efecto de partículas flotantes */}
            <div class="particle particle-1" />
            <div class="particle particle-2" />
            <div class="particle particle-3" />

            <a
              class="relative h-full w-full flex flex-col justify-between p-6 md:p-8"
              href={`https://github.com/karlosvas/${key}`}
              target="_blank"
              aria-label={`Ir a proyecto de ${name}`}
            >
              {/* Icono de GitHub con efecto de órbita */}
              <div class="flex justify-end items-start">
                <div class="github-orbit">
                  <svg class="w-6 h-6 text-white/60 github-icon" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                </div>
              </div>

              {/* Contenido */}
              <div class="space-y-3 project-content">
                <h2 class="text-2xl md:text-3xl font-bold text-white project-title">{name}</h2>
                <p class="text-sm md:text-base text-gray-200 project-description">{description}</p>

                {/* Botón de acción con efecto deslizante */}
                <div class="project-cta">
                  <span class="text-sm font-medium">Ver proyecto</span>
                  <svg class="w-4 h-4 arrow-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </div>
              </div>
            </a>
          </div>
        );
      })
    }
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-none {
    display: block;
    -webkit-line-clamp: unset;
  }

  /* Efecto de inclinación 3D en la tarjeta */
  .project-card {
    transform-style: preserve-3d;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .project-card:hover {
    transform: perspective(1000px) rotateX(2deg) rotateY(-2deg);
  }

  /* Efecto de profundidad en el fondo */
  .project-bg {
    transition: transform 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    transform: translateZ(-20px);
  }

  .project-card:hover .project-bg {
    transform: translateZ(-10px) scale(1.02);
  }

  /* Overlay con efecto de desvanecimiento */
  .project-overlay {
    transition: opacity 0.5s ease;
  }

  .project-card:hover .project-overlay {
    opacity: 0.85;
  }

  /* Partículas flotantes */
  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(168, 85, 247, 0.6);
    border-radius: 50%;
    opacity: 0;
    transition: all 0.8s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .particle-1 {
    top: 20%;
    left: 15%;
  }

  .particle-2 {
    top: 60%;
    right: 20%;
  }

  .particle-3 {
    bottom: 30%;
    left: 70%;
  }

  .project-card:hover .particle {
    opacity: 1;
    animation: float 3s ease-in-out infinite;
  }

  .project-card:hover .particle-1 {
    animation-delay: 0s;
  }

  .project-card:hover .particle-2 {
    animation-delay: 0.5s;
  }

  .project-card:hover .particle-3 {
    animation-delay: 1s;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0) translateX(0);
    }
    25% {
      transform: translateY(-15px) translateX(10px);
    }
    50% {
      transform: translateY(-5px) translateX(-10px);
    }
    75% {
      transform: translateY(-20px) translateX(5px);
    }
  }

  /* Efecto de órbita en el icono de GitHub */
  .github-orbit {
    position: relative;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .github-orbit::before {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    border: 1px solid rgba(168, 85, 247, 0);
    border-radius: 50%;
    transition: all 0.5s ease;
  }

  .project-card:hover .github-orbit::before {
    border-color: rgba(168, 85, 247, 0.4);
    animation: orbit 2s linear infinite;
  }

  @keyframes orbit {
    0% {
      transform: rotate(0deg) scale(1);
      opacity: 1;
    }
    50% {
      transform: rotate(180deg) scale(1.2);
      opacity: 0.5;
    }
    100% {
      transform: rotate(360deg) scale(1);
      opacity: 1;
    }
  }

  .github-icon {
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .project-card:hover .github-icon {
    color: rgba(168, 85, 247, 0.9);
    filter: drop-shadow(0 0 8px rgba(168, 85, 247, 0.5));
  }

  /* Efecto de revelación del contenido */
  .project-content {
    transform: translateY(0);
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .project-card:hover .project-content {
    transform: translateY(-5px);
  }

  /* Título con efecto de máquina de escribir sutil */
  .project-title {
    position: relative;
    display: inline-block;
    transition: all 0.4s ease;
  }

  .project-title::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, rgba(168, 85, 247, 0.8), rgba(59, 130, 246, 0.8));
    transition: width 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .project-card:hover .project-title::after {
    width: 100%;
  }

  /* Descripción con efecto de brillo */
  .project-description {
    transition: all 0.3s ease;
  }

  .project-card:hover .project-description {
    text-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
  }

  /* CTA con efecto de deslizamiento */
  .project-cta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    position: relative;
    padding-left: 0;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .project-card:hover .project-cta {
    padding-left: 8px;
    color: rgba(168, 85, 247, 0.95);
  }

  .project-cta::before {
    content: "";
    position: absolute;
    left: 0;
    width: 0;
    height: 2px;
    background: rgba(168, 85, 247, 0.8);
    transition: width 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .project-card:hover .project-cta::before {
    width: 20px;
  }

  .arrow-icon {
    transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }

  .project-card:hover .arrow-icon {
    transform: translateX(4px) rotate(-10deg);
  }

  /* Efecto de resplandor en los bordes al hover */
  .project-card::after {
    content: "";
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    padding: 1px;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(168, 85, 247, 0) 40%,
      rgba(168, 85, 247, 0.3) 50%,
      rgba(168, 85, 247, 0) 60%,
      transparent 100%
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .project-card:hover::after {
    opacity: 1;
    animation: borderShine 2s linear infinite;
  }

  @keyframes borderShine {
    0% {
      background-position: 0% 50%;
    }
    100% {
      background-position: 200% 50%;
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .project-card:hover {
      transform: perspective(1000px) rotateX(1deg) rotateY(-1deg);
    }
  }
</style>
