<script type="module">
   import { validateEmail, validatePassword } from '/src/functions/auth.ts';

   // Si no estamos logeados/registrados validamos los campos de entrada de el email y del password.
   if (localStorage.getItem('emailValid') !== 'true' || localStorage.getItem('passwordValid') !== 'true') {
      document.getElementById('email').addEventListener('keydown', (event) => {
         if (event.key === 'Enter') {
            validateEmail("email");
            validatePassword("password");
            event.preventDefault();
         }
      });
      document.getElementById('password').addEventListener('keydown', (event) => {
