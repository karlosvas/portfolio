---
import Layout from "../layouts/IndexLayout.astro";
import Header from "../layouts/Header.astro";
import Footer from "../layouts/Footer.astro";
import Main from "../layouts/Main.astro";

// Selecionamos el idioma con i18n
import { getI18N } from "../../i18n/index";
let { currentLocale } = Astro;
// Obtenemos los datos del idioma selecionado
const data = getI18N({ currentLocale });
---

<Layout title="Portfolio Carlos Vásquez Sánchez">
  <!-- Header -->
  <Header />
  <!-- Contenido principal -->
  <Main data={data} />
  <!-- Footer -->
  <Footer data={data} />
</Layout>
